{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "src/components/ContractDetail.vue",
    "src/components/HelloWorld.vue",
    "src/components/AppointmentsPage.vue",
    "src/components/AppointmentsSchedules.vue",
    "src/components/CalendarPage.vue"
  ]
}
